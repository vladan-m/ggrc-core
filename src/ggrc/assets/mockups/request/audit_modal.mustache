<div id="AuditModal" class="modal hide fade modal-selector ui-draggable" tabindex="-1" role="dialog" aria-labelledby="AuditModalLabel" aria-hidden="true">
  <div class="modal-header">
    <a class="modal-dismiss pull-right" href="javascript://" data-dismiss="modal">
      <i class="grcicon-x-grey"></i>
    </a>
    <h2>Edit Audit</h2>
  </div>

  <div class="modal-body">
    <div class="hideable-holder">
      <form action="javascript://">
        <!-- Reset button -->
        <div class="row-fluid">
          <div class="span12">
            <div class="pull-right reset-form">
              <p>
                <small><em>Fields are only temporarily hidden</em></small>
                <a id="formHide" tabindex="36" class="btn btn-small btn-draft" href="javascript://">Hide all optional fields</a>
                <a id="formRestore" tabindex="36" class="btn btn-small btn-draft" href="javascript://" style="display:none;">Show all optional fields</a>
              </p>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span6  ">
            <div class="spacing-bottom">
              <label>
                Program
              <span class="required">*</span>
              </label>
              <input type="text" class="input-block-level ui-autocomplete-input" name="program.id" tabindex="1" data-permission-type="update" data-lookup="Program" autofocus="" autocomplete="off">
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span6">
            <label>
              Title
              <span class="required">*</span>
              <i class="grcicon-help-black" rel="tooltip" title="Give new Audits a name that's easy to search for and indicates the main goals of this Audit."></i>
            </label>
            <input class="input-block-level" placeholder="Enter Title" name="title" type="text" value="" tabindex="2" autofocus="">
          </div>
          <div class="span3">
            <label>
              Internal Audit Lead
              <span class="required">*</span>
            </label>
            <i class="grcicon-person-green pull-left icon-field"></i>
            <div class="objective-selector">
              <input tabindex="3" type="text" name="contact.email" data-lookup="Person" class="span10 audit-selector search-icon" placeholder="Enter text to search for Internal Audit Lead" value="user@example.com">
            </div>
          </div>
          <div class="span3 hidable">
            <label>
              Status
              <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
            </label>
            <div tabindex="4">
              <select class="input-block-level" name="status" disabled="true">
                <option>Planned</option>
                <option>In Progress</option>
                <option>Manager Review</option>
                <option>Ready for External Review</option>
                <option>Completed</option>
              </select>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span3 hidable">
            <label>
              Planned Start Date
              <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
            </label>
            <input tabindex="6" class="input-block-level date" name="start_date" data-toggle="datepicker" data-before="end_date" placeholder="MM/DD/YYYY" type="text" value="">
          </div>
          <div class="span3 hidable">
            <label>
              Planned End Date
              <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
            </label>
            <input tabindex="7" class="input-block-level date" name="end_date" data-toggle="datepicker" data-after="start_date" placeholder="MM/DD/YYYY" type="text" value="">
          </div>
          <div class="span6 hidable">
            <label>
              Planned Report Period (from - to):
              <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
            </label>
            <div class="row-fluid">
              <div class="span6">
                <input tabindex="8" class="input-block-level date" name="report_start_date" data-toggle="datepicker" data-before="report_end_date" placeholder="MM/DD/YYYY" type="text" value="">
              </div>
              <div class="span6">
                <input tabindex="9" class="input-block-level date" name="report_end_date" data-toggle="datepicker" data-after="report_start_date" placeholder="MM/DD/YYYY" type="text" value="">
              </div>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span6 hidable">
            <label>
              Description
              <i class="grcicon-help-black" rel="tooltip" title="Describe reason and purpose of the Audit."></i>
              <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
            </label>
            <div class="wysiwyg-area">
              <textarea tabindex="2" id="system_description" class="span12 triple wysihtml5" name="description" placeholder="Enter description"></textarea>
            </div>
          </div>
          <div class="span6 hidable">
            <div class="row-fluid inner-hide spacing-bottom">
              <div class="span12 hidable">
                <label>
                  Auditors
                  <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
                </label>
                <p>No auditor assigned</p>

                <a href="javascript://" class="btn btn-small btn-draft" tabindex="11">+ Add Auditor</a>
              </div>
            </div>
            <div class="row-fluid inner-hide">
              <div class="span12 hidable">
                <label>
                  Audit Firm
                  <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
                </label>
                <div class="objective-selector">
                  <input tabindex="12" type="text" name="audit_firm.email" data-lookup="OrgGroup" class="span8 search-icon" placeholder="Enter text to search for Audit Firm" value="">
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span6 hidable">
            <div class="row-fluid wrap-row">
              <div class="span12 small-info ">
                <label class="multi-type-label">
                  Audit Folder <label style="display: inline"><i class="grcicon-help-black" rel="tooltip" data-original-title="If selected, all Audit attachments go here."></i></label>
                </label>
                <a href="javascript://" tabindex="" class="entry-attachment tree-item-add" data-toggle="gdrive-picker" data-model="Audit" data-type="folders">
                  <i class="grcicon-gdrive"></i> Assign Google Drive folder
                </a>
              </div>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span4 hidable">
            <label>
              Code
              <i class="grcicon-help-black" rel="tooltip" title="The gGRC application will automatically provide codes for new objects.  If you would like to override this feature you may manually enter a code of your choosing.  You should have a specific reason for doing this."></i>
              <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
            </label>
            <input tabindex="8" class="input-block-level" name="slug" placeholder="AUDIT-XXX" type="text" value="">
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="modal-footer">
    <div class="row-fluid">
      <div class="span6"></div>
      <div class="span6">
        <div class="confirm-buttons">
          <a id="templateDefined" class="btn btn-small btn-success preventdoubleclick " data-toggle="modal-submit" data-dismiss="modal" href="javascript://">
            Save
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
