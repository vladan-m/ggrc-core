{{{> "/static/mustache/base_objects/tree_view_filter.mustache"}}}

<header class="header sticky sticky-header tree-header {{#filter_is_hidden}}no-filter{{/filter_is_hidden}}">
  <div class="row-fluid">
    <div class="span6">
      <div class="title-heading oneline">
        <span class="widget-col-title" data-field="title">
          Task Group
          <i class="fa fa-caret-down"></i>
        </span>
      </div>
    </div>
    <div class="span2">
      <div class="oneline">
        <span class="widget-col-title" data-field="contact.name|email">
          Assignee
          <i class="fa fa-caret-down"></i>
        </span>
      </div>
    </div>
    <div class="span4">
      <ul class="tree-action-list">
        <li class="filter-trigger">
          <a href="javascript://" {{^filter_is_hidden}}class="active"{{/filter_is_hidden}}>
            <i class="fa fa-search" rel="tooltip" data-placement="left" title="" data-original-title="Hide Filter"></i>
          </a>
        </li>
        {{#if add_item_view}}
        {{^if_equals parent_instance.kind "Backlog"}}
          <li>
            {{{renderLive add_item_view}}}
          </li>
        {{/if_equals}}
        {{/if}}
      </ul>
    </div>
  </div>
</header>
<div class="clearfix"></div>
