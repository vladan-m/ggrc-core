{{#list}}
<li class="{{class.category}}" data-model="true" {{data 'model'}}>
  <a href="{{viewLink}}" class="show-extended">
    <div>
      <div class="lhs-main-title">
        <span class="lhs-item">
          {{firstnonempty title name email}}
        </span>
      </div>
      <div class="lhs-private">
        {{#is_private}}
        <i class="grcicon-private" rel="tooltip" title="Private"></i>
        {{/is_private}}
      </div>
      <div class="lhs-people">
        {{^contact}}
        <i class="grcicon-people-warning"></i>
        {{/contact}}
      </div>
    </div>
  </a>
</li>
{{/list}}

{{#list.is_loading}}
  <li class="spinny"  {{attach_spinner '{ "radius": 4, "length": 7, "width": 2 }' }}>
  </li>
{{/list.is_loading}}
