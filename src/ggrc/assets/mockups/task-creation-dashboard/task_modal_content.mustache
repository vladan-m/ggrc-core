{{#tasks}}
<div class="modal-header">
  <a class="modal-dismiss pull-right" href="javascript://" data-dismiss="modal">
    <i class="fa fa-times black"></i>
  </a>
  <h2>Create new {{type}}</h2>
</div>
<div class="modal-body">

  <div class="row-fluid wrap-row">
    <div class="span12">
      {{> /static/mustache/mockup_base_templates/quick-task/summary.mustache}}
    </div>
  </div>

  <div class="row-fluid wrap-row">
    <div class="span8">
      <div class="row-fluid">
        <div class="span12">
          {{> /static/mustache/mockup_base_templates/quick-task/description.mustache}}

          {{> /static/mustache/mockup_base_templates/quick-task/additional_fields.mustache}}
        </div>
      </div>
    </div>
    <div class="span4">
      <div class="row-fluid wrap-row">
        <div class="span12">
          {{> /static/mustache/mockup_base_templates/quick-task/assignee.mustache}}
        </div>
      </div>
      <div class="row-fluid">
        <div class="span12">
          {{> /static/mustache/mockup_base_templates/quick-task/workflow_list.mustache}}
        </div>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span8">
      {{> /static/mustache/mockup_base_templates/quick-task/objects_list.mustache}}
    </div>
    <div class="span4">
      <div class="row-fluid">
        {{> /static/mustache/mockup_base_templates/quick-task/dates.mustache}}
      </div>
    </div>
  </div>

  {{#task_group}}
  <div class="row-fluid">
    <div class="span4">
      {{> /static/mustache/mockup_base_templates/quick-task/task_group.mustache}}
    </div>
  </div>
  {{/task_group}}
</div>

<div class="modal-footer">
  <div class="row-fluid">
    <div class="span4"></div>
    <div class="span8">
      <div class="confirm-buttons">
        {{> /static/mustache/mockup_base_templates/quick-task/create_template.mustache}}
        <a tabindex="24" class="btn btn-small btn-info preventdoubleclick disabled" data-toggle="modal-submit-addmore"
        href="javascript://">
          Save &amp; Add Another
        </a>
        {{^zero_state}}
        <a tabindex="25" class="new-task-trigger modal-dismiss btn btn-small btn-success preventdoubleclick disabled" data-toggle="modal-submit"
        href="javascript://" data-dismiss="modal">
          Save &amp; Close
        </a>
        {{/zero_state}}
        {{#zero_state}}
        <a tabindex="25" class="modal-dismiss show-first-task-trigger btn btn-small btn-success preventdoubleclick disabled" data-toggle="modal-submit"
        href="/mockups/workflow-v2.2#Monthly%20sprints/my_task-1">
          Save &amp; Close
        </a>
        {{/zero_state}}
      </div>
    </div>
  </div>
</div>
{{/tasks}}

{{> /static/mustache/task-creation-dashboard/task_setup_mapper.mustache }}
