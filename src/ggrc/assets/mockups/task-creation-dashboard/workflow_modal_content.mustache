{{#workflows}}
<div class="modal-header">
  <a class="modal-dismiss pull-right" href="javascript://" data-dismiss="modal">
    <i class="fa fa-times black"></i>
  </a>
  <h2>Create new {{type}}</h2>
</div>
<div class="modal-body">

  <div class="row-fluid wrap-row">
    <div class="span12">
      {{> /static/mustache/mockup_base_templates/quick-workflow/title.mustache}}
    </div>
  </div>

  <div class="row-fluid wrap-row">
    <div class="span8">
      {{> /static/mustache/mockup_base_templates/quick-workflow/description.mustache}}
    </div>
    <div class="span4">
      <div class="row-fluid wrap-row">
        <div class="span12">
          {{> /static/mustache/mockup_base_templates/quick-workflow/manager.mustache}}
        </div>
      </div>
      <div class="row-fluid">
        <div class="span12">
          {{> /static/mustache/mockup_base_templates/quick-workflow/frequency.mustache }}
        </div>
      </div>
    </div>
  </div>

  <div class="row-fluid wrap-row">
    <div class="span8">
      {{> /static/mustache/mockup_base_templates/quick-workflow/folder.mustache }}
    </div>
  </div>

  <div class="row-fluid">
    <div class="span3">
       {{> /static/mustache/mockup_base_templates/quick-workflow/code.mustache }}
    </div>
  </div>
</div>

<div class="modal-footer">
  <div class="row-fluid">
    <div class="span6"></div>
    <div class="span6">
      <div class="confirm-buttons">
        <a tabindex="24" class="btn btn-small btn-info preventdoubleclick disabled" data-toggle="modal-submit-addmore"
        href="javascript://">
          Save &amp; Add Another
        </a>
        <a tabindex="25" class="modal-dismiss btn btn-small btn-success preventdoubleclick disabled" data-toggle="modal-submit"
        href="/mockups/workflow-v2.2#Monthly%20sprints">
          Save &amp; Close
        </a>
      </div>
    </div>
  </div>
</div>
{{/workflows}}
