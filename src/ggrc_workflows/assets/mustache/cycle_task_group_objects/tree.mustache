<li class="tree-item t-assigned" {{addclass "t-" instance.status}} {{addclass "t-" instance.overdue}} data-object-id="{{instance.id}}" data-object-type="{{instance.class.table_singular}}">
  <div class="item-main" {{#instance}}{{data 'model'}}{{/instance}}>
    <div class="item-wrap">
      {{> '/static/mustache/base_objects/open_close.mustache'}}
      <div class="select">
        <div class="item-data">
          <div class="row-fluid">
            <div class="span4">
              <div class="title tree-title-area">
                {{#using object=instance.object}}
                  {{#if object.title}}
                    <div class="span11">
                      <i class="fa fa-{{object.class.table_singular}}"></i>
                      {{object.title}}
                    </div>
                  {{else}}
                    {{instance.title}} <span class="gray">Sorry, you do not have access</span>
                  {{/if}}
                {{/using}}
              </div>
            </div>
            <div class="span4">
              <ul class="tree-action-list">
                <li>
                  {{{renderLive '/static/mustache/tasks/states.mustache' status=instance.status}}}
                </li>
              </ul>
            </div>
          </div>
        </div><!-- item-data end -->
      </div><!-- select end -->
    </div><!-- item-wrap end -->
  </div><!-- item-main end -->

  {{#if expanded}}
  <div class="tier-2-info item-content">
    <div class="tier-2-info-content">

      {{#if draw_children}}
        {{#child_options}}
          <div class="inner-tree">
            <ul class="tree-structure new-tree" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data("options")) }}></ul>
          </div>
        {{/child_options}}
      {{/if}}

    </div>
  </div>
  {{/if}}
</li>
