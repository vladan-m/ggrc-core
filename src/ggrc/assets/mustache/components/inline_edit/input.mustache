  {{#mandatory}}<span class="required">*</span>{{/mandatory}}
  <input type="text" can-value="context.value" autofocus>
{{else}}
  <p class="inline-edit__text">
    {{{firstnonempty context.value '<span class="empty-message">None</span>'}}}
  </p>
{{/if}}
