{{#each options}}
  <li class="tree-item task-item" data-object-type="{{instance.class.table_singular}}"{{#instance}}{{ data 'option' }}{{/instance}} data-id="{{ instance.id }}">
    <div class="item-main">
      <div class="item-wrap">
        {{{render '/static/mustache/base_objects/open_close.mustache' instance=instance}}}
        <div class="select">
          <div class="item-data">
            <div class="row-fluid">
              <div class="span11">
                <div class="tree-title-area">
                  {{#if_helpers '\
                    #if_equals' instance.type "Program" '\
                    and #if' instance.private}}
                    <span class="private">
                      <i class="grcicon-private"></i>
                    </span>
                  {{/if_helpers}}
                  {{instance.title}}
                  <span class="url-link">
                    {{instance.link}}
                  </span>
                </div>
              </div>

              <div class="span1">
                <div class="object-check" align="left">
                  {{#if mappings.length}}
                    {{#has_pending_removal selected_object instance}}
    Â                  <input type="checkbox" value="{{instance.title}}" data-id="{{instance.id}}" class="object-check-single">
                    {{else}}
                    {{#result_direct_mappings bindings_compute selected_object}}
                      <input type="checkbox" value="{{instance.title}}" data-id="{{instance.id}}" checked="checked" disabled="true" class="object-check-single">
                    {{/result_direct_mappings}}
                    {{/has_pending_addition}}
                  {{else}}
                    {{#has_pending_addition selected_object instance}}
                      <input type="checkbox" value="{{instance.title}}" data-id="{{instance.id}}" checked="checked" disabled="true" class="object-check-single">
                    {{else}}
                      <input type="checkbox" value="{{instance.title}}" data-id="{{instance.id}}" class="object-check-single">
                    {{/has_pending_addition}}
                  {{/if}}
                </div>
              </div>
            </div>
          </div><!-- item-data end -->
        </div><!-- select end -->
      </div><!-- item-wrap end -->
    </div><!-- item-main end -->

    <div class="tier-2-info item-content">
      <div class="tier-2-info-content">
        {{!#pack instance=this}}
          {{#find_template 'tier2_content' instance}}
            {{#instance.class.table_singular}}
              {{{renderLive template}}}
            {{/instance}}
          {{else}}
            <div class="show-description">
              <div class="row-fluid">
                <div class="span12">
                  <div class="tree-description short">
                    {{{instance.description}}}
                  </div>
                  {{{show_long}}}
                </div>
              </div>
            </div>
          {{/find_template}}
        {{!/pack}}
      </div>
    </div>
</li>
{{/each}}
