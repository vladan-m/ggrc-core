<span class="person-holder">
  <a href='{{viewLink}}' target="_blank">
    <span class="person-tooltip-trigger" data-placement="top">
      <i class="fa fa-{{class.table_singular}} color"></i>
      {{firstnonempty title description name email}}
    </span>
  </a>

  <div class="custom-popover-content">
    <div class="preview-container person-preview">
      <div class="row-fluid">
        <div class="span12">
          <div class="profile-info">
            <div class="row-fluid wrap-row">
              <div class="span8">
                <h6>Title</h6>
                <h5 class="oneline">
                  <i class="fa fa-{{class.table_singular}} color"></i>
                  {{title}}
                </h5>
              </div>
              <div class="span4">
                <h6>Status</h6>
                {{state}}
              </div>
            </div>
            <div class="row-fluid wrap-row">
              <div class="span12">
                <h6>Description</h6>
                {{description}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</span>
