{{#list}}
<li class="{{class.category}}" data-model="true" {{data 'model'}}>
  <a href="{{ggrc_config_value "RISK_ASSESSMENT_URL"}}/riskDetails?risk_assessments_id={{id}}" class="show-extended" target="_blank">
    <div class="row-fluid">
      <div class="span8 lhs-main-title">
        <span class="lhs-item">
          {{firstnonempty title name email}}
        </span>
      </div>
      <div class="span1 lhs-people">
      {{^contact}}
        <i class="fa fa-person red"></i>
      {{/contact}}
      </div>
    </div>
  </a>
</li>
{{/list}}
{{^list}}
<li class="spinner">
</li>
{{/list}}

{{#list.is_loading}}
<li class="spinner">
  <span {{attach_spinner '{ "radius": 4, "length": 4, "width": 2 }' 'display:inline-block; top: -3px; left: 30px;' }}></span>
</li>
{{/list.is_loading}}
